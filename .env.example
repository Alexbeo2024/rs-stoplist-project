# =====================================
# PostgreSQL Database
# =====================================
# Эти переменные используются в docker-compose.yml для запуска контейнера с БД
# и в приложении для подключения к ней.
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=email_processor
POSTGRES_HOST=db
POSTGRES_PORT=5432

# =====================================
# Application Settings
# =====================================
# Хост и порт, на которых будет доступно FastAPI приложение внутри Docker
APP_HOST=0.0.0.0
APP_PORT=8000

# =====================================
# Email (IMAP)
# =====================================
# Учетные данные для подключения к почтовому ящику
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password_or_app_token

# =====================================
# SFTP
# =====================================
# Учетные данные для подключения к SFTP серверу
SFTP_HOST=sftp.example.com
SFTP_USER=sftp_user
# Путь к приватному ключу SFTP.
# Ключ должен быть доступен внутри контейнера.
# Мы сделаем это, прописав volume в docker-compose.yml
SFTP_KEY_PATH=/root/.ssh/id_rsa

# =====================================
# Notifications
# =====================================
# Telegram Bot
TG_BOT_TOKEN=your_telegram_bot_token
TG_CHAT_ID=your_telegram_chat_id

# Email (SMTP) for sending alerts
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user@example.com
SMTP_PASSWORD=your_smtp_password
SMTP_RECIPIENTS=admin1@example.com,admin2@example.com
